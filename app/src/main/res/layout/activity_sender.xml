<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sender"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.flore.myapplication.SenderActivity">

    <TextView
        android:text="input the text you wish to transmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:typeface="sans" />

    <Button
        android:text="Turn On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTransmit"
        android:layout_alignBaseline="@+id/btnStopTransm"
        android:layout_alignBottom="@+id/btnStopTransm"
        android:layout_alignLeft="@+id/txtFreqV"
        android:layout_alignStart="@+id/txtFreqV" />

    <Button
        android:text="Turn OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStopTransm"
        android:layout_marginTop="151dp"
        android:layout_below="@+id/txtFreqV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="68dp"
        android:layout_marginEnd="68dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtFreqV"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnStopTransm"
        android:layout_alignEnd="@+id/btnStopTransm" />

</RelativeLayout>
